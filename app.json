{
  "name": "coloARize",
  "displayName": "coloARize",
  "plugins": [
    [
      "with-rn-bluetooth-classic",
      {
        "peripheralUsageDescription": "Allow myDevice to check bluetooth peripheral info",
        "alwaysUsageDescription": "Allow myDevice to always use bluetooth info",
        "protocols": [
          "com.myCompany.p1",
          "com.myCompany.p2"
        ]
      }
    ]
  ],
  "ios": {
    "infoPlist": {
      "UISupportedExternalAccessoryProtocols": [
        "com.apple.m1"
      ],
      "NSBluetoothAlwaysUsageDescription": "Access bluetooth device over serial connection to document connection features"
    },
    "bundleIdentifier": "com.lamiauddin.coloarize"
  },
  "android": {
    "permissions": [
      "android.permission.BLUETOOTH",
      "android.permission.BLUETOOTH_ADMIN",
      "android.permission.ACCESS_FINE_LOCATION",
      "android.permission.BLUETOOTH_CONNECT",
      "android.permission.BLUETOOTH_SCAN",
      "android.permission.BLUETOOTH_ADVERTISE"
    ],
    "package": "com.lamiauddin.coloarize"
  }
}
